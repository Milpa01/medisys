# Configuración del entorno de desarrollo
APP_ENV=development
APP_DEBUG=true
APP_NAME=MediSys
APP_VERSION=1.0.0
APP_URL=http://localhost/medisys

# Configuración de base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=medisys
DB_USER=root
DB_PASS=

# Configuración de seguridad
APP_KEY=medisys_secret_key_2025
SESSION_LIFETIME=1440
HASH_SALT=medisys_salt_security

# Configuración de archivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=public/uploads/
TEMP_PATH=public/uploads/temp/

# Configuración de correo (opcional para futuras implementaciones)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@medisys.com
MAIL_FROM_NAME=MediSys

# Configuración de logs
LOG_LEVEL=debug
LOG_PATH=logs/

# Configuración de la aplicación
DEFAULT_TIMEZONE=America/Guatemala
DEFAULT_LANGUAGE=es
DATE_FORMAT=d/m/Y
TIME_FORMAT=H:i
DATETIME_FORMAT=d/m/Y H:i

# Configuración de sesiones
SESSION_DRIVER=file
SESSION_PATH=storage/sessions/
SESSION_COOKIE_NAME=medisys_session
SESSION_COOKIE_LIFETIME=0
SESSION_COOKIE_PATH=/
SESSION_COOKIE_DOMAIN=
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Configuración de paginación
PAGINATION_PER_PAGE=10
PAGINATION_MAX_LINKS=5